<header>
    <div class="row">
        <div class="small-12 large-6 columns">
            <div class="logo">
                <a href="/">University Document Management System</a>
            </div>
        </div>
        <div class="small-12 large-6 columns">
            <div class="auth">
                {{#if ID}}
                    <span>You are logged in as {{userID}}</span>
                    <div class="tiny button radius log-off">Log off</div>
                {{else}}
                    <span>You are not logged in.</span>
                    <div class="tiny button radius login-button">Log in</div>
                {{/if}}
            </div>
        </div>
    </div>
</header>